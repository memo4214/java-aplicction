<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="?appBackgroundColor"
        tools:context=".MainActivity"
        android:orientation="vertical">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?btnColor" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الجامعة الافتراضية"
                    android:textColor="?appTextColor"
                    android:textStyle="bold"
                    android:paddingStart="12dp"
                    android:fontFamily="@font/fontfile"
                    android:textSize="30dp"
                    />
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/pic" />
            </com.google.android.material.appbar.MaterialToolbar>

        </com.google.android.material.appbar.AppBarLayout>
        <ImageView
            android:layout_width="225dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/pic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/clients"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:backgroundTint="?btnColor"
                    android:padding="0dp"
                    android:text="المندوبون"
                    android:fontFamily="@font/fontfile"
                    android:textColor="?appTextColor"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <ImageButton
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:fontFamily="@font/fontfile"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp"
                android:backgroundTint="#00FFFFFF"
                android:padding="6dp"
                android:src="@drawable/plus"
                android:scaleType="fitCenter"
                android:textColor="?appTextColor"
                android:textSize="20sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/salCaom"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/fontfile"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:backgroundTint="?btnColor"
                    android:padding="0dp"
                    android:text="إدخال مبيعات وحساب العمولة"
                    android:textColor="?appTextColor"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/searchCom"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/fontfile"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginHorizontal="20dp"
                    android:backgroundTint="?btnColor"
                    android:padding="0dp"
                    android:text="البحث عن عمولات"
                    android:textColor="?appTextColor"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/searchSal"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:fontFamily="@font/fontfile"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="?btnColor"
                    android:padding="0dp"
                    android:text="البحث عن مبيعات"
                    android:textColor="?appTextColor"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>


</ScrollView>