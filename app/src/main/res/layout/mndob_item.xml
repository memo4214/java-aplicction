<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/cardvRep"
    app:cardBackgroundColor="#54000000"
    app:cardCornerRadius="12dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:paddingTop="12dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
android:gravity="center"
    android:paddingTop="15dp"
    android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:elevation="12dp"
                android:id="@+id/view2"
                app:cardCornerRadius="60dp"
                android:layout_centerHorizontal="true"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9">
                <ImageView
                    android:layout_height="120dp"
                    android:layout_width="match_parent"
                    android:id="@+id/repImageId"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_launcher_foreground"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">
                </ImageView>
            </androidx.cardview.widget.CardView>
</LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/rnameid"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:gravity="center|center_vertical"
                    android:text="اسم المندوب"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/rnumid"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:layout_gravity="start|center_vertical"
                    android:gravity="center|center_vertical"
                    android:drawablePadding="5dp"
                    android:paddingTop="10dp"
                    android:text="رقم المندوب"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:padding="3dp"/>
            </LinearLayout>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:orientation="horizontal">





        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:paddingHorizontal="18dp"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/rregionid"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center|center_vertical"
                android:text="المنطقة"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:padding="3dp"/>
            </LinearLayout>
        </LinearLayout>





    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/check"
                android:id="@+id/rEditId"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:fontFamily="@font/fontapp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:layout_marginVertical="10dp"
                android:text="إزالة"
                android:textColor="@color/teal_200"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/delete"
                android:id="@+id/rdeletId"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/fontapp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:gravity="center"
                android:layout_marginVertical="10dp"
                android:text="إزالة"
                android:textColor="@color/teal_200"/>
        </LinearLayout>
    </LinearLayout>



    </LinearLayout>
</androidx.cardview.widget.CardView>